<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register | Supermarket</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/site.css">
  <link rel="stylesheet" href="/css/auth.css">
</head>
<body class="bg-light">


  <!--
    NOTES (Register view)
    - Validation: server enforces email `@gmail.com` and 8-digit contact. See `controllers/UserController.js` for server-side rules.
      * If teacher asks to change the email rule, update both this client script and the controller to keep them in sync.
    - The form has a hidden `role` field forced to `user` on the server. To allow admin creation, change server logic instead of only the UI.
    - Common live edits: change placeholder text, add/remove fields. After edits, restart server if you modified controllers.
  -->

  <%- include('partials/header') %>

  <section class="auth-hero">
    <div class="container">
      <div class="d-flex justify-content-center">
        <div class="card auth-card">
          <div class="card-body">
            <div class="text-center mb-3">
              <div class="auth-brand">FreshMart</div>
              <div class="auth-sub">Create your account â€” shop fresh, fast</div>
            </div>

            <% 
              const serverMsgs = messages || [];
              const serverSuccess = (typeof success !== 'undefined' && success) ? (Array.isArray(success) ? success : [success]) : [];
              const emailMsgs = serverMsgs.filter(m => /email/i.test(m));
              const contactMsgs = serverMsgs.filter(m => /contact|phone/i.test(m));
              const usernameMsgs = serverMsgs.filter(m => /username/i.test(m));
              const passwordMsgs = serverMsgs.filter(m => /password|special character|Password must/i.test(m));
              const addressMsgs = serverMsgs.filter(m => /address/i.test(m));
              const otherMsgs = serverMsgs.filter(m => !/email|contact|phone|username|password|address|special character|Password must/i.test(m));
            %>

            <% if ((serverMsgs && serverMsgs.length) || (serverSuccess && serverSuccess.length)) { %>
              <div id="flashPopup" class="position-fixed top-0 end-0 p-3" style="z-index:1080;">
                <% serverMsgs.forEach(m => { %>
                  <div class="alert alert-danger alert-dismissible fade show mb-2" role="alert">
                    <%= m %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  </div>
                <% }) %>
                <% serverSuccess.forEach(m => { %>
                  <div class="alert alert-success alert-dismissible fade show mb-2" role="alert">
                    <%= m %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  </div>
                <% }) %>
              </div>
            <% } %>

            <form action="/register" method="POST" id="registerForm" novalidate>
              <input type="hidden" name="role" value="user">

              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="username" class="form-label">Username</label>
                  <input type="text" name="username" id="username" class="form-control" required>
                  <% if (usernameMsgs.length) { %>
                    <% usernameMsgs.forEach(m => { %>
                      <div class="invalid-feedback d-block"><%= m %></div>
                    <% }) %>
                  <% } else { %>
                    <div class="invalid-feedback"></div>
                  <% } %>
                </div>
                <div class="col-md-6 mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input type="email" name="email" id="email" class="form-control" required>
                  <% if (emailMsgs.length) { %>
                    <% emailMsgs.forEach(m => { %>
                      <div class="invalid-feedback d-block"><%= m %></div>
                    <% }) %>
                  <% } else { %>
                    <div class="invalid-feedback"></div>
                  <% } %>
                </div>
              </div>

              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <div class="input-group">
                  <input type="password" name="password" id="password" class="form-control" required aria-describedby="registerTogglePassword">
                  <button class="btn btn-outline-secondary" type="button" id="registerTogglePassword" aria-pressed="false" aria-label="Show password">Show</button>
                </div>
                <div class="form-text small text-muted">Password must be at least 6 characters and include an uppercase letter, a digit, and a special character (e.g. !@#$%).</div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="address" class="form-label">Address</label>
                  <input type="text" name="address" id="address" class="form-control" required>
                  <% if (addressMsgs.length) { %>
                    <% addressMsgs.forEach(m => { %>
                      <div class="invalid-feedback d-block"><%= m %></div>
                    <% }) %>
                  <% } else { %>
                    <div class="invalid-feedback"></div>
                  <% } %>
                </div>
                <div class="col-md-6 mb-3">
                  <label for="contact" class="form-label">Contact Number</label>
                  <input type="tel" name="contact" id="contact" class="form-control" pattern="\d{8}" maxlength="8" required title="Enter 8 digit phone number">
                  <% if (contactMsgs.length) { %>
                    <% contactMsgs.forEach(m => { %>
                      <div class="invalid-feedback d-block"><%= m %></div>
                    <% }) %>
                  <% } else { %>
                    <div class="invalid-feedback"></div>
                  <% } %>
                </div>
              </div>

              <!-- role is fixed to 'user' -->

                <button type="submit" class="btn btn-success w-100">Register</button>
            </form>

            <div class="text-center mt-3 auth-footer">
              Already have an account? <a href="/login">Login</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%- include('partials/footer') %>

  <script>
    // Client-side validation for register
    (function () {
      const form = document.getElementById('registerForm');
      const alerts = document.getElementById('registerAlerts') || null;
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      const gmailRegex = /@gmail\.com$/i;

      form.addEventListener('submit', function (e) {
        if (alerts) alerts.innerHTML = '';
        const username = document.getElementById('username').value.trim();
        const email = document.getElementById('email').value.trim();
        const password = document.getElementById('password').value;
        const address = document.getElementById('address').value.trim();
        const contact = document.getElementById('contact').value.trim();

        const errors = [];
        // clear previous inline errors
        ['username','email','password','address','contact'].forEach(id => {
          const el = document.getElementById(id);
          if (el) el.classList.remove('is-invalid');
          const fb = el && el.parentElement.querySelector('.invalid-feedback');
          if (fb) fb.textContent = '';
        });

        if (!username) {
          errors.push({ field: 'username', msg: 'Username is required.' });
        }
        if (!email) {
          errors.push({ field: 'email', msg: 'Email is required.' });
        } else if (!emailRegex.test(email)) {
          errors.push({ field: 'email', msg: 'Please enter a valid email address.' });
        } else if (!gmailRegex.test(email)) {
          errors.push({ field: 'email', msg: 'Email must end with "@gmail.com".' });
        }
        if (!password) {
          errors.push({ field: 'password', msg: 'Password is required.' });
        } else if (password.length < 6) {
          errors.push({ field: 'password', msg: 'Password must be at least 6 characters.' });
        } else if (!/[A-Z]/.test(password) || !/\d/.test(password)) {
          errors.push({ field: 'password', msg: 'Password must include at least one uppercase letter and one digit.' });
        } else if (!/[!@#$%^&*(),.?":{}|<>]/.test(password)) {
          errors.push({ field: 'password', msg: 'Password must include at least one special character.' });
        }
        if (!address) {
          errors.push({ field: 'address', msg: 'Address is required.' });
        }
        if (!contact) {
          errors.push({ field: 'contact', msg: 'Contact number is required.' });
        } else if (!/^\d{8}$/.test(contact)) {
          errors.push({ field: 'contact', msg: 'Contact number must be exactly 8 digits.' });
        }

        if (errors.length) {
          e.preventDefault();
          errors.forEach(err => {
            const el = document.getElementById(err.field);
            if (el) {
              el.classList.add('is-invalid');
              const fb = el.parentElement.querySelector('.invalid-feedback');
              if (fb) fb.textContent = err.msg;
            }
          });
          // Also show a floating flash popup for client-side validation errors
          try {
            const msgs = errors.map(e => e.msg);
            showFlashPopup(msgs, 'danger');
          } catch (ignore) {}
          // scroll to first invalid field
          const first = document.querySelector('.is-invalid');
          if (first) first.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }
      });
    })();
    // Setup password visibility toggle for register form
    (function () {
      function setupPasswordToggle(toggleId, inputId) {
        const btn = document.getElementById(toggleId);
        const input = document.getElementById(inputId);
        if (!btn || !input) return;
        btn.addEventListener('click', function () {
          const isHidden = input.type === 'password';
          input.type = isHidden ? 'text' : 'password';
          btn.setAttribute('aria-pressed', isHidden ? 'true' : 'false');
          btn.textContent = isHidden ? 'Hide' : 'Show';
          btn.setAttribute('aria-label', isHidden ? 'Hide password' : 'Show password');
        });
      }
      setupPasswordToggle('registerTogglePassword', 'password');
    })();

    // Utility: create a floating flash popup similar to server-side popup
    function showFlashPopup(messages, type = 'danger') {
      if (!Array.isArray(messages)) messages = [messages];
      let container = document.getElementById('flashPopup');
      if (!container) {
        container = document.createElement('div');
        container.id = 'flashPopup';
        container.className = 'position-fixed top-0 end-0 p-3';
        container.style.zIndex = 1080;
        document.body.appendChild(container);
      }
      messages.forEach(m => {
        const alert = document.createElement('div');
        alert.className = `alert alert-${type} alert-dismissible fade show mb-2`;
        alert.setAttribute('role', 'alert');
        alert.innerHTML = `${m} <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>`;
        container.appendChild(alert);
      });
      // Auto-hide after 4s
      setTimeout(() => {
        if (!container) return;
        container.querySelectorAll('.alert').forEach(a => {
          try { a.remove(); } catch (e) {}
        });
      }, 4000);
    }

    // If server rendered a flashPopup, auto-hide it after a delay
    (function () {
      const p = document.getElementById('flashPopup');
      if (!p) return;
      setTimeout(() => {
        p.querySelectorAll('.alert').forEach(a => { try { a.remove(); } catch (e) {} });
      }, 4000);
    })();
  </script>
</body>
</html>
