<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register | Supermarket</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/site.css">
  <link rel="stylesheet" href="/css/auth.css">
</head>
<body class="bg-light">


  <!--
    NOTES (Register view)
    - Validation: server enforces email `@gmail.com` and 8-digit contact. See `controllers/UserController.js` for server-side rules.
      * If teacher asks to change the email rule, update both this client script and the controller to keep them in sync.
    - The form has a hidden `role` field forced to `user` on the server. To allow admin creation, change server logic instead of only the UI.
    - Common live edits: change placeholder text, add/remove fields. After edits, restart server if you modified controllers.
  -->

  <%- include('partials/header') %>

  <section class="auth-hero">
    <div class="container">
      <div class="d-flex justify-content-center">
        <div class="card auth-card">
          <div class="card-body">
            <div class="text-center mb-3">
              <div class="auth-brand">FreshMart</div>
              <div class="auth-sub">Create your account â€” shop fresh, fast</div>
            </div>

            <% 
              const serverMsgs = messages || [];
              const emailMsgs = serverMsgs.filter(m => /email/i.test(m));
              const contactMsgs = serverMsgs.filter(m => /contact|phone/i.test(m));
              const usernameMsgs = serverMsgs.filter(m => /username/i.test(m));
              const passwordMsgs = serverMsgs.filter(m => /password/i.test(m));
              const addressMsgs = serverMsgs.filter(m => /address/i.test(m));
              const otherMsgs = serverMsgs.filter(m => !/email|contact|phone|username|password|address/i.test(m));
            %>

            <% if (otherMsgs.length) { %>
              <div class="mb-3">
                <% otherMsgs.forEach(m => { %>
                  <div class="text-danger small"><%= m %></div>
                <% }) %>
              </div>
            <% } %>

            <form action="/register" method="POST" id="registerForm" novalidate>
              <input type="hidden" name="role" value="user">

              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="username" class="form-label">Username</label>
                  <input type="text" name="username" id="username" class="form-control" required>
                  <% if (usernameMsgs.length) { %>
                    <% usernameMsgs.forEach(m => { %>
                      <div class="invalid-feedback d-block"><%= m %></div>
                    <% }) %>
                  <% } else { %>
                    <div class="invalid-feedback"></div>
                  <% } %>
                </div>
                <div class="col-md-6 mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input type="email" name="email" id="email" class="form-control" required>
                  <% if (emailMsgs.length) { %>
                    <% emailMsgs.forEach(m => { %>
                      <div class="invalid-feedback d-block"><%= m %></div>
                    <% }) %>
                  <% } else { %>
                    <div class="invalid-feedback"></div>
                  <% } %>
                </div>
              </div>

              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" id="password" class="form-control" required>
              </div>

              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="address" class="form-label">Address</label>
                  <input type="text" name="address" id="address" class="form-control" required>
                  <% if (addressMsgs.length) { %>
                    <% addressMsgs.forEach(m => { %>
                      <div class="invalid-feedback d-block"><%= m %></div>
                    <% }) %>
                  <% } else { %>
                    <div class="invalid-feedback"></div>
                  <% } %>
                </div>
                <div class="col-md-6 mb-3">
                  <label for="contact" class="form-label">Contact Number</label>
                  <input type="tel" name="contact" id="contact" class="form-control" pattern="\d{8}" maxlength="8" required title="Enter 8 digit phone number">
                  <% if (contactMsgs.length) { %>
                    <% contactMsgs.forEach(m => { %>
                      <div class="invalid-feedback d-block"><%= m %></div>
                    <% }) %>
                  <% } else { %>
                    <div class="invalid-feedback"></div>
                  <% } %>
                </div>
              </div>

              <!-- role is fixed to 'user' -->

                <button type="submit" class="btn btn-success w-100">Register</button>
            </form>

            <div class="text-center mt-3 auth-footer">
              Already have an account? <a href="/login">Login</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%- include('partials/footer') %>

  <script>
    // Client-side validation for register
    (function () {
      const form = document.getElementById('registerForm');
      const alerts = document.getElementById('registerAlerts');
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      const gmailRegex = /@gmail\.com$/i;

      form.addEventListener('submit', function (e) {
        alerts.innerHTML = '';
        const username = document.getElementById('username').value.trim();
        const email = document.getElementById('email').value.trim();
        const password = document.getElementById('password').value;
        const address = document.getElementById('address').value.trim();
        const contact = document.getElementById('contact').value.trim();

        const errors = [];
        // clear previous inline errors
        ['username','email','password','address','contact'].forEach(id => {
          const el = document.getElementById(id);
          if (el) el.classList.remove('is-invalid');
          const fb = el && el.parentElement.querySelector('.invalid-feedback');
          if (fb) fb.textContent = '';
        });

        if (!username) {
          errors.push({ field: 'username', msg: 'Username is required.' });
        }
        if (!email) {
          errors.push({ field: 'email', msg: 'Email is required.' });
        } else if (!emailRegex.test(email)) {
          errors.push({ field: 'email', msg: 'Please enter a valid email address.' });
        } else if (!gmailRegex.test(email)) {
          errors.push({ field: 'email', msg: 'Email must end with "@gmail.com".' });
        }
        if (!password) {
          errors.push({ field: 'password', msg: 'Password is required.' });
        }
        if (!address) {
          errors.push({ field: 'address', msg: 'Address is required.' });
        }
        if (!contact) {
          errors.push({ field: 'contact', msg: 'Contact number is required.' });
        } else if (!/^\d{8}$/.test(contact)) {
          errors.push({ field: 'contact', msg: 'Contact number must be exactly 8 digits.' });
        }

        if (errors.length) {
          e.preventDefault();
          errors.forEach(err => {
            const el = document.getElementById(err.field);
            if (el) {
              el.classList.add('is-invalid');
              const fb = el.parentElement.querySelector('.invalid-feedback');
              if (fb) fb.textContent = err.msg;
            }
          });
          // scroll to first invalid field
          const first = document.querySelector('.is-invalid');
          if (first) first.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }
      });
    })();
  </script>
</body>
</html>
