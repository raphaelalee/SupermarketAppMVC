<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/site.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket</title>
</head>
<body>
    <%- include('partials/header') %>

  <div class="container py-4">
    <div class="row">
      <!-- Sidebar -->
      <aside class="col-md-3 mb-4">
        <div class="card p-3">
          <h5 class="mb-3">Browse by</h5>
          <ul class="list-unstyled">
            <li><a href="#">All Products</a></li>
            <li><a href="#">Dairy</a></li>
            <li><a href="#">Meat</a></li>
            <li><a href="#">Produce</a></li>
          </ul>
          <hr>
          <h6>Filter by</h6>
          <label class="form-label small">Price</label>
          <input type="range" class="form-range" min="0" max="100">
        </div>
      </aside>

      <!-- Main content -->
      <main class="col-md-9">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <div>
            <h2 class="mb-0">All Products</h2>
            <p class="text-muted small mb-0">This is your category description. It's a great place to tell customers what this category is about.</p>
          </div>
          <div class="text-end text-muted small">Sort by: Recommended</div>
        </div>

        <% if (products && products.length > 0) { %>
          <div class="product-grid">
            <% products.forEach(product => { %>
              <div class="product-card">
                <img src="/images/<%= product.image %>" alt="<%= product.productName %>" class="product-image" onerror="this.src='https://via.placeholder.com/320x160'">
                <div class="product-card-body">
                  <div class="d-flex justify-content-between align-items-start">
                    <div>
                      <div class="product-title"><a href="/product/<%= product.id %>" class="text-decoration-none"><%= product.productName %></a></div>
                      <div class="product-meta text-muted small">$<%= product.price.toFixed(2) %></div>
                    </div>
                  </div>
                  <div class="mt-3 d-flex justify-content-between align-items-center">
                    <div class="product-meta small">Stock: <%= product.quantity %></div>
                    <div>
                      <a href="/updateProduct/<%= product.id %>" class="btn btn-outline-warning btn-sm me-2">Edit</a>
                      <form action="/products/<%= product.id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('Delete this product?')">
                        <button class="btn btn-danger btn-sm">Delete</button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <p class="text-center text-muted">No products available.</p>
        <% } %>
      </main>
    </div>
  </div>
  <%- include('partials/cartDrawer') %>
  <%- include('partials/footer') %>
</body>
</html>
