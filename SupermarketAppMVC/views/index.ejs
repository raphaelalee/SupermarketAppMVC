<%- include('partials/header') %>

<!-- Hero Section -->
<section class="hero-section py-5" style="background: linear-gradient(90deg,#eaf7ea,#ffffff);">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6">
        <h1 class="fw-bold display-4 text-success">Quality Groceries,<br>Delivered Simply</h1>
        <p class="lead text-muted mt-3">
          Your one-stop online shop for fresh produce, pantry essentials, and more —
          all delivered to your door across Singapore.
        </p>
        <div class="mt-4">
          <a href="/shopping" class="btn btn-success btn-lg me-3 px-4">Shop Now</a>
          <a href="#about" class="btn btn-outline-success btn-lg px-4">Learn More</a>
        </div>
      </div>

      <div class="col-lg-6 text-center mt-4 mt-lg-0">
        <img src="/images/broccoli2.jpg" alt="Fresh groceries" class="img-fluid rounded-4 shadow-sm" style="max-height:360px;">
      </div>
    </div>
  </div>
</section>

<!-- Featured Products -->
<section class="container py-5">
  <h2 class="fw-bold text-center mb-5">Featured Products</h2>

  <% if (featured && featured.length > 0) { %>
  <div class="row">
    <% featured.forEach(product => { %>
      <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
        <div class="card product-card border-0 h-100">
          <img src="/images/<%= product.image %>" class="card-img-top p-3" alt="<%= product.productName %>" style="height:180px;object-fit:contain;">
          <div class="card-body text-center d-flex flex-column">
            <h6 class="fw-semibold"><%= product.productName %></h6>
            <p class="fw-bold text-success mb-3">$<%= product.price %></p>
            <a href="/product/<%= product.id %>" class="btn btn-outline-success btn-sm mt-auto">View Product</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
  <% } else { %>
    <p class="text-center text-muted">No featured products yet.</p>
  <% } %>
</section>

<!-- About Section (Optional) -->
<section id="about" class="py-5 bg-light">
  <div class="container text-center">
    <h3 class="fw-bold mb-3 text-success">Why Choose FreshMart?</h3>
    <p class="text-muted mx-auto" style="max-width:700px;">
      We partner with trusted local farms and suppliers to bring you the freshest produce and pantry staples.
      Our goal is simple — make grocery shopping convenient, sustainable, and affordable.
    </p>
  </div>
</section>

<%- include('partials/footer') %>
