<%- include('partials/header') %>

  <section class="container py-4">
    <!-- Breadcrumb -->
    <p class="text-muted small mb-2">
      <a href="/" class="text-decoration-none text-success">Home</a> ›
      <%= category==='All' ? 'All Products' : category %>
    </p>

    <!-- Page heading -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h2 class="fw-bold">
          <%= category==='All' ? 'All Products' : category %>
        </h2>
        <p class="text-muted small">Browse our wide range of products — fresh, local, and delivered across Singapore.
        </p>
      </div>

      <div class="dropdown">
        <button class="btn btn-outline-success dropdown-toggle" data-bs-toggle="dropdown">Sort by</button>
        <ul class="dropdown-menu">
          <li><a class="dropdown-item" href="#">Recommended</a></li>
          <li><a class="dropdown-item" href="#">Price: Low to High</a></li>
          <li><a class="dropdown-item" href="#">Price: High to Low</a></li>
        </ul>
      </div>
    </div>

    <div class="row">
      <!-- LEFT FILTER PANEL -->
      <aside class="col-lg-3 mb-4">
        <div class="border rounded-3 p-3 bg-white shadow-sm">
          <h6 class="fw-bold text-success mb-3">Browse by</h6>
          <ul class="list-unstyled">
            <% categories.forEach(cat=> { %>
              <li class="mb-2">
                <a href="/shopping?category=<%= cat %>"
                  class="text-decoration-none <%= category === cat ? 'fw-semibold text-success' : 'text-dark' %>">
                  <%= cat %>
                </a>
              </li>
              <% }) %>
          </ul>

          <hr>
          <h6 class="fw-bold text-success mb-3">Filter by</h6>
          <p class="small mb-1 text-muted">Price</p>
          <input type="range" class="form-range" min="1" max="100">
          <div class="d-flex justify-content-between small">
            <span>$1</span><span>$100</span>
          </div>
        </div>
      </aside>

      <!-- PRODUCT GRID -->
      <div class="col-lg-9">
        <% if (products && products.length> 0) { %>
          <div class="row row-cols-2 row-cols-md-3 row-cols-lg-3 g-4">
            <% products.forEach(product=> { %>
              <div class="col">
                <div class="card border-0 h-100 shadow-sm">
                  <img src="/images/<%= product.image %>" class="card-img-top p-3" alt="<%= product.productName %>"
                    style="height:180px;object-fit:contain;">
                  <div class="card-body text-center d-flex flex-column">
                    <h6 class="fw-semibold">
                      <%= product.productName %>
                    </h6>
                    <p class="fw-bold text-success mb-2">$<%= product.price.toFixed(2) %>
                    </p>
                    <form action="/add-to-cart/<%= product.id %>" method="POST" class="mt-auto">
                      <input type="hidden" name="quantity" value="1">
                      <button class="btn btn-outline-success btn-sm w-100">Add to Cart</button>
                    </form>
                  </div>
                </div>
              </div>
              <% }) %>
          </div>
          <% } else { %>
            <p class="text-muted text-center">No products found in this category.</p>
            <% } %>
      </div>
    </div>
  </section>



  <!-- ========================= -->
  <!--     CART DRAWER HTML     -->
  <!-- ========================= -->
  <div id="cartDrawer" class="cart-drawer">
    <div class="cart-header d-flex justify-content-between align-items-center">
      <h5>Your Cart</h5>
      <button id="closeCart" class="btn-close"></button>
    </div>

    <div class="cart-body mt-3">
      <% if (cart && cart.length> 0) { %>
        <% cart.forEach(item=> { %>
          <div class="cart-item d-flex align-items-center mb-3">
            <img src="/images/<%= item.image %>" class="cart-img me-2">
            <div>
              <p class="fw-bold m-0">
                <%= item.productName %>
              </p>
              <div class="d-flex align-items-center gap-2">
                <!-- Decrease -->
                <form action="/cart/decrease/<%= item.id %>" method="POST">
                  <button class="btn btn-outline-secondary btn-sm">−</button>
                </form>

                <!-- Quantity -->
                <span class="px-2 fw-bold">
                  <%= item.quantity %>
                </span>

                <!-- Increase -->
                <form action="/cart/increase/<%= item.id %>" method="POST">
                  <button class="btn btn-outline-secondary btn-sm">+</button>
                </form>
              </div>

              <p class="small text-muted mb-0">Subtotal: $<%= item.subtotal.toFixed(2) %>
              </p>

            </div>
          </div>
          <% }) %>
            <% } else { %>
              <p>Your cart is empty.</p>
              <% } %>
    </div>

    <div class="cart-footer mt-auto">
      <h5>Total: $<%= typeof total !=='undefined' ? total : 0 %>
      </h5>
      <a href="/cart" class="btn btn-outline-success w-100 my-2">View Cart</a>
      <a href="/checkout" class="btn btn-success w-100">Checkout</a>
    </div>
  </div>

  <!-- Overlay -->
  <div id="cartOverlay" class="cart-overlay"></div>


  <%- include('partials/footer') %>