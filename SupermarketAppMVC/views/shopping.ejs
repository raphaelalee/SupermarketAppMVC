<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Supermarket App</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/site.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body class="bg-light">
  <!-- Navbar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <% if (user && user.role === "admin") { %>
            <li class="nav-item">
              <a class="nav-link" href="/addProduct">Add Product</a>
            </li>
          <% } %>
          <li class="nav-item">
            <a class="nav-link" href="/cart">View Cart</a>
          </li> 
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li> 
        </ul>
      </div>
    </div>
  </nav>

  <!-- Page Content -->
  <div class="container py-5">
    <div class="hero mb-4">
      <div class="row align-items-center">
        <div class="col-md-8">
          <h1 class="mb-1">Fresh & Local — Delivered</h1>
          <p class="mb-0 text-muted">Browse seasonal produce and pantry staples. Ethically sourced, farm-fresh quality.</p>
        </div>
        <div class="col-md-4 text-md-end mt-3 mt-md-0">
          <form action="/search" method="GET" class="d-flex justify-content-end">
            <input name="q" class="form-control me-2" type="search" placeholder="Search products" aria-label="Search">
            <button class="btn btn-primary">Search</button>
          </form>
        </div>
      </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
      <div>
        <p class="mb-0">Welcome, <strong><%= user.username %></strong> — <span class="text-muted">Role: <%= user.role %></span></p>
      </div>
      <% if (user && user.role === 'admin') { %>
        <div><a href="/addProduct" class="btn btn-warning">Add new product</a></div>
      <% } %>
    </div>

    <% if (products && products.length > 0) { %>
      <div class="product-grid">
        <% products.forEach((product, idx) => { %>
          <div class="product-card fade-up" style="animation-delay: <%= ((idx % 6) * 0.03).toFixed(2) %>s;">
            <img src="/images/<%= product.image %>" alt="<%= product.productName %>" class="product-image" onerror="this.src='https://via.placeholder.com/320x160'">
            <div class="product-card-body">
              <div class="d-flex justify-content-between align-items-start mb-2">
                <div>
                  <div class="product-title"><a href="/product/<%= product.id %>" class="text-decoration-none"><%= product.productName %></a></div>
                  <div class="product-meta"><span class="badge-qty"><%= product.quantity %> in stock</span></div>
                </div>
                <div class="text-end">
                  <div class="h5 mb-0 text-success">$<%= product.price.toFixed(2) %></div>
                </div>
              </div>

              <div class="d-flex justify-content-between align-items-center mt-3 card-actions">
                <% if (user && user.role === 'user') { %>
                  <form action="/add-to-cart/<%= product.id %>" method="POST" class="d-flex gap-2">
                    <select name="quantity" class="form-select" style="width:90px">
                      <% for (let q = 1; q <= Math.min(product.quantity, 6); q++) { %>
                        <option value="<%= q %>"><%= q %></option>
                      <% } %>
                    </select>
                    <button class="btn btn-primary">Add</button>
                  </form>
                <% } else if (user && user.role === 'admin') { %>
                  <div class="d-flex">
                    <a href="/updateProduct/<%= product.id %>" class="btn btn-outline-warning me-2">Edit</a>
                    <form action="/products/<%= product.id %>/delete" method="POST" onsubmit="return confirm('Delete this product?')">
                      <button class="btn btn-danger">Delete</button>
                    </form>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p class="text-center text-muted">No products available at the moment.</p>
    <% } %>
  </div>

  <footer class="text-center py-3 bg-dark text-white">
    <p class="mb-0">&copy; 2025 Supermarket App</p>
  </footer>
</body>
</html>
