<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>FreshMart | Online Grocery Store</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body style="font-family:'Poppins',sans-serif; background:#fff; color:#222;">

  <nav class="navbar navbar-expand-lg bg-white border-bottom shadow-sm sticky-top">
    <div class="container py-3">
      <a class="navbar-brand fw-bold text-success fs-3" href="/">FreshMart</a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="mainNav">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-center gap-lg-2">
          <li class="nav-item">
            <a class="nav-link px-3" href="/shopping">Shop</a>
          </li>
          <% if (!(user && user.role === 'admin')) { %>
            <li class="nav-item">
              <a class="nav-link px-3" href="/about">About</a>
            </li>
            <li class="nav-item">
              <a class="nav-link px-3" href="/help-center">Help Center</a>
            </li>
          <% } %>

          <% if (user && user.role === 'admin') { %>
            <li class="nav-item">
              <a class="nav-link px-3" href="/inventory">Inventory</a>
            </li>
            <li class="nav-item">
              <a class="nav-link px-3" href="/admin/orders">Dashboard</a>
            </li>
          <% } %>

          <% if (!user) { %>
            <li class="nav-item">
              <a class="nav-link px-3" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="btn btn-success ms-lg-2" href="/register">Register</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link px-3" href="/logout">Logout</a>
            </li>
          <% } %>

          <% if (!(user && user.role === 'admin')) { %>
            <li class="nav-item">
              <a class="btn btn-outline-success ms-lg-2 cart-trigger d-flex align-items-center gap-1" href="/cart">
                <i class="bi bi-cart3 fs-5"></i>
                <span>Cart</span>
                <span class="badge rounded-pill text-success-emphasis bg-success-subtle fw-semibold" data-cart-count><%= cartCount || 0 %></span>
              </a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Toast container for flash messages (moved inside .main-content for better positioning) -->

  <%- include('cartDrawer') %>

  <main class="main-content">

    <!-- Toast container for flash messages (positioned within the main white content area) -->
    <div aria-live="polite" aria-atomic="true" class="position-relative">
      <div class="toast-container position-absolute top-0 end-0 p-3" id="flashToastContainer" style="z-index:1050;">
        <% if (messages && messages.length > 0) { %>
          <% messages.forEach(m => { %>
            <div class="toast align-items-center text-bg-success border-0 mb-2" role="alert" aria-live="assertive" aria-atomic="true">
              <div class="d-flex">
                <div class="toast-body"><%= m %></div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
              </div>
            </div>
          <% }) %>
        <% } %>

        <% if (errors && errors.length > 0) { %>
          <% errors.forEach(e => { %>
            <div class="toast align-items-center text-bg-danger border-0 mb-2" role="alert" aria-live="assertive" aria-atomic="true">
              <div class="d-flex">
                <div class="toast-body"><%= e %></div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
              </div>
            </div>
          <% }) %>
        <% } %>
      </div>
    </div>

  <script>
    // Initialize and show bootstrap toasts for any flash messages rendered in the header
    // NOTES (Toasts & Header):
    // - Toast markup is rendered inside #flashToastContainer. To change position, edit CSS in `public/css/style.css`.
    // - Toasts require Bootstrap JS (`bootstrap.bundle.min.js`) included in the footer (`views/partials/footer.ejs`).
    // - To change auto-hide delay, update the `delay` value below (currently 3000 ms).
    // - When modifying header (nav links), keep the authentication checks (`res.locals.user`) consistent with `app.js` middleware.
    document.addEventListener('DOMContentLoaded', function () {
      if (typeof bootstrap === 'undefined') return;
      var toastEls = [].slice.call(document.querySelectorAll('#flashToastContainer .toast'));
      toastEls.forEach(function (el) {
        try {
          // Autohide toasts after 3 seconds so they don't block products
          var t = new bootstrap.Toast(el, { delay: 3000 });
          t.show();
        } catch (e) {
          // ignore
        }
      });
    });
  </script>
