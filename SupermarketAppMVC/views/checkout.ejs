<%- include('partials/header') %>
<div class="container py-5" style="max-width:600px;">
  <h1 class="text-center mb-4">Checkout</h1>

  <div class="card p-4 shadow-sm">
    <h5>Total Amount: S$ <%= total.toFixed(2) %></h5>
    <hr>
    <p>Select a payment method:</p>
    <form method="POST" action="/checkout">
      <div class="form-check mb-2">
        <input class="form-check-input" type="radio" name="payment" value="paynow" id="paynow" checked>
        <label class="form-check-label" for="paynow">PayNow (UEN: 202412345A)</label>
      </div>
      <div class="form-check mb-2">
        <input class="form-check-input" type="radio" name="payment" value="paylah" id="paylah">
        <label class="form-check-label" for="paylah">PayLah! / PayAnyone</label>
      </div>
      <div class="form-check mb-2">
        <input class="form-check-input" type="radio" name="payment" value="card" id="card">
        <label class="form-check-label" for="card">Credit/Debit Card (Visa / Mastercard)</label>
      </div>
      <button type="submit" class="btn btn-success w-100 mt-3">Complete Payment</button>
    </form>
  </div>

  <div class="text-center mt-4">
    <img src="/images/sg-pay.png" alt="PayNow/PayLah Logos" width="200">
  </div>
</div>
<%- include('partials/footer') %>
