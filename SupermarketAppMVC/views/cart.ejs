<%- include('partials/header') %>
<div class="container py-5">
  <h1>My Cart ðŸ›’</h1>
  <% if (items.length === 0) { %>
    <p>Your cart is empty.</p>
  <% } else { %>
    <table class="table">
      <thead><tr><th>Product</th><th>Qty</th><th>Price</th><th>Subtotal</th><th></th></tr></thead>
      <tbody>
        <% items.forEach(i => { %>
          <tr>
            <td><%= i.productName %></td>
            <td><%= i.quantity %></td>
            <td>S$<%= i.price.toFixed(2) %></td>
            <td>S$<%= i.subtotal.toFixed(2) %></td>
            <td>
              <form action="/cart/remove/<%= i.id %>" method="POST">
                <button class="btn btn-sm btn-outline-danger">Remove</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <h4 class="text-end">Total: S$<%= total.toFixed(2) %></h4>
  <% } %>
</div>
<%- include('partials/footer') %>
