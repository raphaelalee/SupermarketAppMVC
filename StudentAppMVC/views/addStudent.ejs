<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Add Student | Student List App</title>
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Student List App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/students/add">Add new student</a>
            </li> 
          </ul>
        </div>
      </div>
    </nav>

    <!-- Form -->
    <div class="container mt-5">
      <div class="text-center mb-4">
        <h2>Add New Student</h2>
      </div>

      <form action="/students" method="POST" enctype="multipart/form-data" class="w-50 mx-auto border p-4 rounded shadow-sm bg-light">
        <div class="mb-3">
          <label for="name" class="form-label">Student Name</label>
          <input type="text" id="name" name="name" class="form-control" required>
        </div>

        <div class="mb-3">
          <label for="dob" class="form-label">Date of Birth</label>
          <input type="date" id="dob" name="dob" class="form-control" required>
        </div>

        <div class="mb-3">
          <label for="contact" class="form-label">Contact</label>
          <input type="number" id="contact" name="contact" class="form-control" required>
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Image</label>
          <input type="file" id="image" name="image" class="form-control" accept="image/*" required>
        </div>

        <div class="text-center">
          <button type="submit" class="btn btn-primary">Add Student</button>
          <a href="/students" class="btn btn-secondary ms-2">Cancel</a>
        </div>
      </form>
    </div>
  </body>
</html>
